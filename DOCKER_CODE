version: "3.9"

services:
  db:
    image: postgres:15
    restart: always
    environment:
      POSTGRES_USER: user
      POSTGRES_PASSWORD: password
      POSTGRES_DB: profiler
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  backend:
    image: python:3.10-slim
    container_name: db-profiler-backend
    working_dir: /app
    volumes:
      - ./backend:/app
    command: >
      sh -c "pip install fastapi uvicorn pandas tabulate &&
             uvicorn api:app --host 0.0.0.0 --port 8000"
    depends_on:
      - db
    ports:
      - "8000:8000"

  frontend:
    image: python:3.10-slim
    container_name: db-profiler-frontend
    working_dir: /app
    volumes:
      - ./frontend:/app
    command: >
      sh -c "pip install streamlit requests pandas &&
             streamlit run streamlit_app.py --server.port=8501 --server.address=0.0.0.0"
    depends_on:
      - backend
    ports:
      - "8501:8501"

volumes:
  postgres_data:
